<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateRoomDateActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".DateActivity">

        <LinearLayout
            android:layout_width="372dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="20dp"
            tools:layout_editor_absoluteY="4dp">

            <Button
                android:id="@+id/btn_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:background="@drawable/arrow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/pretendard_bold"
                android:text="방만들기"
                android:textColor="@color/text_main"
                android:textSize="20dp">

            </TextView>
        </LinearLayout>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/pretendard_bold"
            android:text="원하는 기간 선택"
            android:textColor="@color/text_main"
            android:textSize="24sp" />

        <FrameLayout
            android:id="@+id/frame_createroom"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_margin="35dp">

            <TextView
                android:id="@+id/tv_startdate_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="시작일:"
                android:textColor="@color/black2"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/tv_startdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black2"
                android:textSize="20sp" />

            <View
                android:layout_width="120dp"
                android:layout_height="1dp"
                android:layout_marginStart="80dp"
                android:layout_marginTop="35dp"
                android:background="@color/black2" />

            <ImageButton
                android:id="@+id/ib_startdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="190dp"
                android:backgroundTint="@color/realwhite"
                android:src="@drawable/ic_calender" />

            <TextView
                android:id="@+id/tv_enddate_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:text="종료일:"
                android:textColor="@color/realblack"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/tv_enddate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginTop="80dp"
                android:textColor="@color/black2"
                android:textSize="20sp" />

            <View
                android:layout_width="120dp"
                android:layout_height="1dp"
                android:layout_marginStart="80dp"
                android:layout_marginTop="105dp"
                android:background="@color/black2" />

            <ImageButton
                android:id="@+id/ib_enddate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="190dp"
                android:layout_marginTop="70dp"
                android:backgroundTint="@color/realwhite"
                android:src="@drawable/ic_calender" />


        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/createRoomBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent">
        <Button
            android:id="@+id/btn_prev"
            android:layout_width="160sp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_strokerec_blu"
            android:textColor="@color/textblock_blu"

            android:text="이전으로" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btn_next"
            android:layout_width="160sp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_rec_blu"
            android:textColor="@color/text_white"
            android:text="다음으로"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
